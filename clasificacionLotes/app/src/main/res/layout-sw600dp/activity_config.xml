<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.msig.clasificacionlotes.ConfigActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/wrapperserver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/txt_config_server"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_config_server"
        android:layout_below="@+id/lbl_config_server"
        android:ems="10"
        android:inputType="text"
        android:hint="Servidor"
        android:text="megabyteguatemala" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
    android:id="@+id/wrappersystem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/wrapperserver">
    <EditText
        android:id="@+id/txt_config_sistem"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wrappersystem"
        android:hint="Sistema"
        android:ems="10"
        android:inputType="text"
        android:text="Maquinaria" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/btn_config_save"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wrappersystem"
        android:layout_marginTop="39dp"
        android:background="#0c2709"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/lbl_config_save"
        android:textColor="#FFFFFF" />

</LinearLayout>
